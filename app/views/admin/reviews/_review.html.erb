<tr class="text-gray-700">
  <td class="px-4 py-3 border text-center">
    <%= review.id %>
  </td>
  <td class="px-4 py-3 border">
    <%= review.title %>
  </td>
  <td class="px-4 py-3 border">
    <%= review.user.name %>
  </td>
  <td class="px-4 py-3 border">
    <%= l review.created_at, format: :long %>
  </td>
  <td class="px-4 py-3 border flex justify-center">
    <%= link_to '詳細', admin_review_path(review), class: "btn btn-primary" %>
    <%= link_to '編集', '#', class: "btn btn-warning mx-3" %>
    <%= link_to '削除', '#', class: "btn btn-error" %>
  </td>
</tr>
