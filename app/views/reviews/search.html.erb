<% content_for(:title, t('.title')) %>
<div class="container mx-auto px-5 py-10 relative">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4">
    <% if @reviews.present?%>
      <h2>検索結果: <%= @reviews.count %>件</h2>
    <% else %>
      <h2>検索結果: 0件</h2>
    <% end %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <% if @reviews.present? %>
        <%= render partial: 'review', collection: @reviews %>
      <% else %>
        <%= t('.no_reviews') %>
      <% end %>
    </div>
  </div>
  <div class="absolute flex justify-center inset-x-0 bottom-0">
    <%= paginate @reviews %>
  </div>
</div>
