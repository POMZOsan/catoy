<div class="container px-5 py-24 mx-auto">
  <div class="lg:w-4/5 mx-auto flex flex-wrap bg-white rounded-3xl">
    <div class="lg:w-1/2 w-full lg:h-auto h-64 object-cover object-center">
      <%= @review.decorate.has_image? %>
    </div>
    <div class="lg:w-1/2 w-full lg:pl-10 lg:py-6 mt-6 lg:mt-0">
      <div class="flex items-center space-x-2">
        <div class="w-16 mask mask-squircle">
          <%= @review.user.decorate.has_avatar? %>
        </div>
        <div class="text-sm font-medium"><%= @review.user.name %></div>
      </div>
      <h1 class="text-3xl title-font font-extrabold mb-1"><%= @review.title %></h1>
      <div class="flex mb-4">
        <span class="flex items-center">
          <svg fill="currentColor" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 text-indigo-400" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
          </svg>
          <svg fill="currentColor" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 text-indigo-400" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
          </svg>
          <svg fill="currentColor" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 text-indigo-400" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
          </svg>
          <svg fill="currentColor" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 text-indigo-400" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
          </svg>
          <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 text-indigo-400" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
          </svg>
          <span class="ml-3"><%= @review.decorate.star %></span>
          <span class="ml-6">
            <%= link_to '#' do %>
              <i class="far fa-heart"></i>
            <% end %>
          </span>
        </span>
      </div>
      <p class="leading-relaxed">
        <%= @review.content %>
      </p>
      <div class="flex mt-6 pb-5 pt-3 border-t-2 border-gray-800 mb-5">
        <div class="flex">
          <%= image_tag @review.product.image, class: "w-20 rounded-xl" %>
        </div>
        <div class="flex flex-col ml-3">
          <%= @review.decorate.shop %>
          <%= link_to '商品サイトを見てみる', @review.product.url, target: :_blank, rel: "noopener noreferrer", class: "mt-3 btn" %>
        </div>
      </div>
    </div>
  </div>
</div>
