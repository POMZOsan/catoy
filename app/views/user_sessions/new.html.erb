<% content_for(:title, t('.title')) %>
<div class="container mx-auto px-5 py-10">
  <div class="flex flex-col items-center justify-center">
    <div class="flex flex-col bg-white shadow-md px-10 py-8 rounded-3xl w-96">
      <div class="font-medium self-center text-xl sm:text-3xl text-gray-800">
        <%= t('user_sessions.new.title') %>
      </div>
      <div class="mt-5">
        <%= form_with url: login_path, local: true do |f| %>
          <div class="flex flex-col mb-5">
            <%= f.label User.human_attribute_name(:email) %>
            <%= f.text_field :email, class: "input input-bordered input-sm w-full max-w-xs" %>
          </div>
          <div class="flex flex-col mb-5">
            <%= f.label User.human_attribute_name(:password) %>
            <%= f.password_field :password, class: "input input-bordered input-sm w-full max-w-xs" %>
          </div>
          <div class="flex flex-col mb-5">
            <%= f.label User.human_attribute_name(:password_confirmation) %>
            <%= f.password_field :password_confirmation, class: "input input-bordered input-sm w-full max-w-xs" %>
          </div>
          <div class="flex justify-center items-center mb-5">
            <%= f.submit t('defaults.login'), class: "btn" %>
          </div>
        <% end %>
        <div class="flex justify-center items-center mt-6">
          <%= link_to t('user_sessions.new.to_sign_up'), sign_up_path, class: "link link-hover" %>
        </div>
        <div class="flex justify-center items-center mt-6">
          <%= link_to t('user_sessions.new.password_forget'), '#', class: "link link-hover" %>
        </div>
      </div>
    </div>
  </div>
</div>
