<span class="crud-menus ml-10">
  <%= link_to edit_review_path(review), id: "review-edit-#{review.id}" do %>
    <i class="fas fa-pencil-alt"></i>
  <% end %>
  <%= link_to review_path(review),
   method: :delete,
   data: {confirm: t('defaults.message.delete_confirm')},
   id: "review-delete-#{review.id}" do %>
    <i class="fas fa-trash-alt ml-2"></i>
  <% end %>
</span>
