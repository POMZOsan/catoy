<div class="flex justify-center h-screen w-screen items-center">
  <div class="w-full md:w-3/4 lg:w-1/2 flex flex-col items-center" >
    <h1 class="text-center text-2xl font-bold text-gray-600 mb-6">LOGIN</h1>
    <%= form_with url: admin_login_path, local: true do |f| %>
      <div class="mb-6">
        <div class="relative">
          <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
            <i class="fas fa-envelope"></i>
          </div>
          <%= f.text_field :email, class: "w-full py-4 px-8 bg-gray-50 placeholder:font-semibold rounded hover:ring-1 outline-blue-500", placeholder: "Email" %>
        </div>
      </div>
      <div class="mb-6">
        <div class="relative">
          <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
            <i class="fas fa-lock"></i>
          </div>
          <%= f.password_field :password, class: "w-full py-4 px-8 bg-gray-50 placeholder:font-semibold rounded hover:ring-1 outline-blue-500", placeholder: "Password" %>
        </div>
      </div>
      <div class="mt-4">
        <%= f.submit t('defaults.login'), class: "py-4 bg-green-400 w-full rounded text-blue-50 font-bold hover:bg-green-600" %>
      </div>
    <% end %>
  </div>
</div>
