<% content_for(:title, t('.title')) %>
<div class="container mx-auto px-5 pt-10">
  <div class="flex flex-col items-center justify-center">
    <div class="flex flex-col bg-white shadow-md px-10 py-8 m-4 rounded-3xl w-full sm:w-96">
      <div class="font-medium self-center text-xl sm:text-3xl text-gray-800 mb-4">
        <%= t('.title') %>
      </div>
      <div class="avatar self-center mb-4">
        <div class="w-24 mask mask-squircle">
          <%= image_tag current_user.decorate.avatar %>
        </div>
      </div>
      <div>
        <div class="text-center">
          <div class="text-lg font-extrabold mb-4">
            <%= current_user.name %>
          </div>
          <div class="text-base-content/70 my-3 text-sm">
            <%= simple_format(current_user.decorate.has_introduction?) %>
          </div>
        </div>
      </div>
      <% if current_user.cat.present? %>
        <div class="flex justify-center mt-4">
          <%= link_to t('defaults.edit'), edit_profile_path, class: "btn" %>
        </div>
      <% else %>
        <div class="flex justify-between mt-4">
          <%= link_to t('.register_mycat'), new_profile_mycat_path, class: "btn" %>
          <%= link_to t('defaults.edit'), edit_profile_path, class: "btn btn-sm sm:btn-md" %>
        </div>
      <% end %>
      <div class="flex justify-center mt-4">
        <%= link_to t('.look_my_profile'), user_path(current_user.id), class: "link link-hover" %>
      </div>
    </div>
    <%= link_to profile_path, class: "btn btn-outline btn-error", method: :delete, data: {confirm: t('.delete_confirm')} do  %>
      <i class="fas fa-exclamation-triangle fa-lg mr-1"></i>
      <%= t('.delete_acount') %>
    <% end %>
  </div>
</div>