<header>
  <div class="navbar bg-base-200">
    <div class="navbar-start">
      <div class="px-2 lg:flex-none">
        <%= link_to root_path, class: 'btn btn-ghost normal-case text-xl' do %>
          <%= image_tag 'logo_s.png', width: "70" %>
        <% end %>
      </div> 
    </div>
    <div class="navbar-center">
      <%= render 'shared/search_form', search_review: @search_review %>
    </div>
    <div class="navbar-end">
      <div class="px-2">
        <div class="flex items-stretch">
          <div class="dropdown dropdown-hover">
            <label tabindex="0" class="btn btn-ghost">
              <%= Review.model_name.human %> <span class="ml-2"><i class="fas fa-chevron-down"></i></span>
            </label>
            <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-36">
              <li><%= link_to t('reviews.index.title'), reviews_path %></li>
            </ul>
          </div>
          <%= link_to t('user_sessions.new.title'), login_path, class: 'btn btn-ghost' %>
          <%= link_to t('users.new.title'), sign_up_path, class: 'btn btn-ghost' %>
        </div>
      </div>
  </div>
</header>
