<div class="flex flex-col items-center justify-center">
  <div class="flex flex-col bg-white shadow-md px-10 py-8 m-4 rounded-3xl w-96">
    <div class="font-medium self-center text-xl sm:text-3xl text-gray-800 mb-4">
      <%= t('.title') %>
    </div>
    <div class="avatar self-center mb-4">
      <div class="w-24 mask mask-squircle">
        <% if current_user.cat.avatar.attached? %>
          <%= image_tag current_user.cat.avatar %>
        <% else %>
          <%= image_tag 'sample.jpg' %>
        <% end %>
      </div>
    </div>
    <div>
      <div class="text-center">
        <div class="text-lg font-extrabold mb-4">
          <%= current_user.cat.name %>
        </div>
        <div class="text-base-content/70 my-3 text-sm">
          <%= current_user.cat.sex_i18n %></br>
          <%= current_user.cat.character_i18n %></br>
          <%= current_user.cat.birth_date %></br>
        </div>
      </div>
    </div>
    <div class="flex justify-center mt-4">
      <%= link_to '編集する', edit_profile_mycat_path, class: "btn" %>
    </div>
  </div>
</div>
