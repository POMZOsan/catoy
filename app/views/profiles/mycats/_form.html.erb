<div class="mt-5">
  <%= form_with model: cat, url: url, local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="flex flex-col mb-5">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, id: 'select-image', accept: 'image/*' %>
    </div>
    <div class="avatar self-center mt-4 mb-4">
      <div class="w-24 mask mask-squircle">
        <%= image_tag f.object.decorate.avatar, id: 'preview' %>
      </div>
    </div>
    <div class="flex flex-col mb-5">
      <%= f.label :name %>
      <%= f.text_field :name, class: "input input-bordered input-sm w-full max-w-xs" %>
    </div>
    <div class="flex flex-col mb-5" id="choose-sex">
      <%= f.label Cat.sexes_i18n['male'] %>
      <%= f.radio_button :sex, Cat.sexes.invert[0], class: "radio" %>
      <%= f.label Cat.sexes_i18n['female'] %>
      <%= f.radio_button :sex, Cat.sexes.invert[1], class: "radio" %>
    </div>
    <div class="flex flex-col mb-5" id="choose-character">
      <%= f.label Cat.characters_i18n['active'] %>
      <%= f.radio_button :character, Cat.characters.invert[0], class: "radio" %>
      <%= f.label Cat.characters_i18n['gentle'] %>
      <%= f.radio_button :character, Cat.characters.invert[1], class: "radio" %>
    </div>
    <div class="flex flex-col mb-5">
      <%= f.label :birth_date %>
      <%= f.date_field :birth_date, class: "select select-bordered w-full max-w-xs" %>
    </div>
    <div class="flex justify-center items-center mb-5">
      <%= f.submit class: "btn" %>
    </div>
  <% end %>
</div>
