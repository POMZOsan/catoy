<div class="flex flex-col items-center justify-center">
  <div class="flex flex-col bg-white shadow-md px-10 py-8 m-4 rounded-3xl w-96">
    <div class="font-medium self-center text-xl sm:text-3xl text-gray-800">
      <%= t('users.new.title') %>
    </div>
        <div class="mt-5">
          <%= form_with model: @user, local: true do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="flex flex-col mb-5">
              <%= f.label :name %>
              <%= f.text_field :name, class: "input input-bordered input-sm w-full max-w-xs" %>
            </div>
            <div class="flex flex-col mb-5">
              <%= f.label :email %>
              <%= f.text_field :email, class: "input input-bordered input-sm w-full max-w-xs" %>
            </div>
            <div class="flex flex-col mb-5">
              <%= f.label :password %>
              <%= f.password_field :password, class: "input input-bordered input-sm w-full max-w-xs" %>
            </div>
            <div class="flex flex-col mb-5">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: "input input-bordered input-sm w-full max-w-xs" %>
            </div>
            <div class="flex justify-center items-center mb-5">
              <%= f.submit t('defaults.register'), class: "btn" %>
            </div>
          <% end %>
          <div class="flex justify-center items-center mt-6">
            <%= link_to t('users.new.to_login'), login_path, class: "link link-hover" %>
          </div>
    </div>
  </div>
</div>