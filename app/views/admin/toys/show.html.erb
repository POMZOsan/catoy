<% content_for(:title, t('.title')) %>
<div class="container mx-auto p-6 font-mono">
  <div class="flex justify-between">
    <h1 class="ml-32 mb-10"><%= t('.title') %></h1>
    <div class="mr-40">
      <%= link_to '編集', edit_admin_toy_path(@toy, shop: @toy.model_name.name), class: "btn btn-warning", id: "toy-edit-#{@toy.id}" %>
      <%= link_to '削除', admin_toy_path(@toy, shop: @toy.model_name.name), class: "btn btn-error", id: "toy-delete-#{@toy.id}", method: :delete, data: {confirm: t('defaults.message.delete_confirm')} %>
    </div>
  </div>
  <div class="flex justify-center">
    <div class="w-3/4 mb-8 overflow-hidden rounded-lg shadow-lg">
      <div class="w-full overflow-x-auto">
        <table class="w-full">
          <tbody class="bg-white">
            <tr class="text-gray-700">
              <td class="w-40 px-4 py-3 border text-center">
                ID
              </td>
              <td class="px-4 py-3 border">
                <%= @toy.id %>
              </td>
            </tr>
            <tr class="text-gray-700">
              <td class="w-40 px-4 py-3 border text-center">
                SHOP
              </td>
              <td class="px-4 py-3 border">
                <%= @toy.model_name.name %>
              </td>
            </tr>
            <tr class="text-gray-700">
              <td class="w-40 px-4 py-3 border text-center">
                NAME
              </td>
              <td class="px-4 py-3 border">
                <%= @toy.name %>
              </td>
            </tr>
            <tr class="text-gray-700">
              <td class="w-40 px-4 py-3 border text-center">
                URL
              </td>
              <td class="px-4 py-3 border">
                <%= link_to @toy.url, @toy.url, target: :_blank, rel: "noopener noreferrer", class: "link link-accent" %>
              </td>
            </tr>
            <tr class="text-gray-700">
              <td class="w-40 px-4 py-3 border text-center">
                CREATED_AT
              </td>
              <td class="px-4 py-3 border">
                <%= l @toy.created_at, format: :long %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
